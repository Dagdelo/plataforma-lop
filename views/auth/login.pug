extends ../layout

block content
  section.section
    .container
      .columns
        .column.is-half.is-offset-one-quarter
          h1.title Login
          h2.subtitle NÃ£o possui uma conta?
            | 
            a(href="/cadastro") Cadastre-se
          
          form(action="/login" method="POST")
            .field
              label.label Email
              .control.has-icons-left
                input.input(type="email", name="email", placeholder="Digite seu e-mail")
                span.icon.is-small.is-left
                  i.fa.fa-envelope

            .field
              label.label Senha
              .control.has-icons-left
                input.input(type='password', name='password', placeholder='Digite sua senha')
                span.icon.is-small.is-left
                  i.fa.fa-lock

            .field
              .control
                button.button.is-primary(type="submit") Entrar
          hr
          h2.subtitle Esqueceu sua senha?
          form(action="/conta/esqueceu-senha" method="POST")
            .field
              label.label Email
              .control.has-icons-left
                input.input(type="email", name="email", placeholder="Digite seu e-mail")
                span.icon.is-small.is-left
                  i.fa.fa-envelope
            field
              .control
                button.button.is-primary(type="submit") Resetar senha